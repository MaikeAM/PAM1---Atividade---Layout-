<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Exemplo2Activity">

    <TextView
        android:id="@+id/textData1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/textData1"
        android:textColor="#F44336"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/textData2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="37dp" />

    <TextView
        android:id="@+id/textData2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/textData2"
        android:textColor="#F44336"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textData1"
        app:layout_constraintTop_toTopOf="@+id/textData1" />

    <Button
        android:id="@+id/b1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:text="b1"
        android:textColor="#3F51B5"
        app:layout_constraintEnd_toEndOf="@+id/textData1"
        app:layout_constraintStart_toStartOf="@+id/textData1"
        app:layout_constraintTop_toBottomOf="@+id/textData1" />

    <Button
        android:id="@+id/b2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:text="b2"
        android:textColor="#3F51B5"
        app:layout_constraintEnd_toEndOf="@+id/textData2"
        app:layout_constraintHorizontal_bias="0.728"
        app:layout_constraintStart_toEndOf="@+id/textData1"
        app:layout_constraintTop_toBottomOf="@+id/textData2" />
</androidx.constraintlayout.widget.ConstraintLayout>